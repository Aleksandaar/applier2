<% content_for :page_pretitle do %>
Space structure form fields
<% end %>
<% content_for :page_title do %>
<% 'Index' %>
<% end %>

<turbo-frame id="form_field_index">
  <div class="row row-cards">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Space structure form fields</h3>
          <div class="card-actions">
            <%= link_to new_space_structure_form_field_path, data: { turbo_frame: '_top' }, class: "btn btn-primary" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24"
                stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <line x1="12" y1="5" x2="12" y2="19" />
              <line x1="5" y1="12" x2="19" y2="12" />
            </svg>
            New form field
            <% end %>
          </div>
        </div>
        <div class="table-responsive">
          
          <table class="table table-vcenter table-mobile-md card-table">
            <thead>
              
                <th>Structure</th>
              
                <th>Field type</th>
              
                <th>Position</th>
              
                <th>Required</th>
              
              <th class="w-1"></th>
            </thead>
            <tbody>
              <% @form_fields.each do |form_field| %>
              <tr id='<%= dom_id(form_field)%>'>
                
                  <td class="text-muted" data-label="Structure">
                    <%= form_field.structure_id %>
                  </td>
                
                  <td class="text-muted" data-label="Field type">
                    <%= form_field.field_type %>
                  </td>
                
                  <td class="text-muted" data-label="Position">
                    <%= form_field.position %>
                  </td>
                
                  <td class="text-muted" data-label="Required">
                    <%= form_field.required %>
                  </td>
                
                <td>
                  <div class="btn-list flex-nowrap">
                    <%= button_to "Destroy", space_structure_form_field_path(@space, @structure, form_field), method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}}, class: "btn btn-danger" %>
                    <%= link_to "Show", space_structure_form_field_path(@space, @structure, form_field), data: { turbo_frame: '_top' }, class: "btn btn-primary" %>
                    <%= link_to "Edit", edit_space_structure_form_field_path(@space, @structure, form_field), data: { turbo_frame: '_top' }, class: "btn" %>
                  </div>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="card-footer d-flex align-items-center">
          <p class="m-0 text-muted"><%= page_entries_info @form_fields %></p>
          <%= paginate @form_fields %>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>