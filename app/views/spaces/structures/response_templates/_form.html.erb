<%= form_with(model: [@space, @structure, response_template]) do |form| %>
    <div class="form-group mb-3 row">
      <%= form.label :subject, class: "form-label col-3 col-form-label" %>
    <div class="col">
      <%= form.text_field :subject, class:"form-control" %>
    </div>
  
  </div>
    <div class="form-group mb-3 row">
      <%= form.label :status, class: "form-label col-3 col-form-label" %>
    <div class="col">
      <%= form.select :status, ResponseTemplate.statuses.keys, {}, { class:"form-select" } %>
    </div>
  
  </div>

  <div class="form-group mb-3 row">
    <%= form.label :content_html, class: "form-label col-3 col-form-label" %>
    <div class="col">
      <%= form.textarea :content_html, class:"form-control" %>
    </div>
  </div>

  <div class="form-group mb-3 row">
    <%= form.label :content_text, class: "form-label col-3 col-form-label" %>
    <div class="col">
      <%= form.textarea :content_text, class:"form-control" %>
    </div>
  </div>

    <div class="form-group mb-3 row">
      <%= form.label :enabled, class: "form-check-label col-3" %>

    <div class="col">
      <div class="form-check">
        <%= form.checkbox :enabled, multiple: false, class:"form-check-input" %>
      </div>
    </div>
  
  </div>
  
  <div class="form-footer">
    <%= form.submit "Save", class:"btn btn-primary" %>
    <%= link_to "Cancel", space_structure_response_templates_path, data: { turbo_frame: '_top'}, class: "btn" %>
  </div>
<% end %>       
